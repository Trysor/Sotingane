{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "es2015",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist/out-tsc",
		"baseUrl": ".",
		"lib": [
			"es2017",
			"dom"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"config/*.json"
	],
	"exclude": [
		"node_modules"
	]
}
