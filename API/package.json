{
	"name": "sotingserver",
	"version": "1.0.0",
	"description": "Server backend for Sotingane",
	"main": "dist/api.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsc-watch --onSuccess \"node dist/out-tsc/API/src/app.js\"",
		"lint": "tslint -c tslint.json 'src/**/*.ts'",
		"test:cont": "tsc-watch --onSuccess \"cross-env NODE_ENV=test node dist/out-tsc/API/test/testbed.js\"",
		"test": "npm run build && cross-env NODE_ENV=test node dist/out-tsc/API/test/testbed.js",
		"test:debug": "npm run build && mocha --inspect-brk --delay --exit ./dist/out-tsc/API/**/*.test.js",
		"webpack": "webpack --config webpack.config.js --progress --colors"
	},
	"dependencies": {
		"ajv": "6.10.0",
		"bcrypt": "3.0.6",
		"config": "3.1.0",
		"cookie-parser": "1.4.4",
		"express": "4.17.1",
		"helmet": "3.18.0",
		"image-size": "0.7.4",
		"jsonwebtoken": "8.5.1",
		"method-override": "3.0.0",
		"mongoose": "5.7.7",
		"morgan": "1.9.1",
		"passport": "0.4.0",
		"passport-jwt": "4.0.0",
		"passport-local": "1.0.0",
		"sanitize-html": "1.20.1",
		"source-map-support": "0.5.12",
		"ua-parser-js": "0.7.20",
		"validator": "11.0.0"
	},
	"devDependencies": {
		"@types/bcrypt": "3.0.0",
		"@types/chai": "4.1.7",
		"@types/config": "0.0.34",
		"@types/cookie-parser": "1.4.1",
		"@types/express": "4.17.0",
		"@types/helmet": "0.0.43",
		"@types/image-size": "0.7.0",
		"@types/jsonwebtoken": "8.3.2",
		"@types/method-override": "0.0.31",
		"@types/mocha": "5.2.7",
		"@types/mongoose": "5.5.6",
		"@types/morgan": "1.7.35",
		"@types/node": "12.0.8",
		"@types/passport": "1.0.0",
		"@types/passport-jwt": "3.0.1",
		"@types/passport-local": "1.0.33",
		"@types/sanitize-html": "1.20.0",
		"@types/ua-parser-js": "0.7.33",
		"@types/validator": "10.11.1",
		"chai": "4.2.0",
		"chai-http": "4.3.0",
		"cross-env": "5.2.0",
		"mocha": "6.1.4",
		"ts-loader": "6.0.2",
		"tsc-watch": "2.2.1",
		"tslint": "5.17.0",
		"typescript": "3.5.2",
		"webpack": "4.34.0",
		"webpack-cli": "3.3.4"
	}
}
