{
	"name": "sotingserver",
	"version": "1.0.0",
	"description": "Server backend for Sotingane",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "concurrently \"tsc --watch\" \"nodemon node_modules/nodemon/bin/nodemon.js --watch dist dist/out-tsc/src/index.js\"",
		"lint": "tslint -c tslint.json 'src/**/*.ts'",
		"test:cont": "concurrently \"tsc --watch\" \"SET NODE_ENV=test&& nodemon node_modules/nodemon/bin/nodemon.js --watch dist dist/out-tsc/test/testbed.js\"",
		"test": "npm run build && cross-env NODE_ENV=test node dist/out-tsc/test/testbed.js",
		"test:debug": "npm run build && mocha --inspect-brk --delay --exit ./dist/out-tsc/**/*.test.js",
		"webpack": "webpack --config webpack.config.js --progress --colors"
	},
	"author": "",
	"dependencies": {
		"ajv": "^6.5.1",
		"bcrypt": "^2.0.1",
		"body-parser": "^1.18.3",
		"config": "^1.30.0",
		"cookie-parser": "^1.4.3",
		"express": "^4.16.3",
		"helmet": "^3.12.1",
		"jsonwebtoken": "^8.3.0",
		"method-override": "^2.3.10",
		"mongoose": "^5.1.6",
		"morgan": "^1.9.0",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"sanitize-html": "^1.18.2",
		"source-map-support": "^0.5.6",
		"validator": "^10.4.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^2.0.0",
		"@types/body-parser": "^1.17.0",
		"@types/chai": "^4.1.4",
		"@types/chai-http": "^3.0.4",
		"@types/config": "0.0.34",
		"@types/cookie-parser": "^1.4.1",
		"@types/express": "^4.16.0",
		"@types/helmet": "0.0.38",
		"@types/jsonwebtoken": "^7.2.7",
		"@types/method-override": "0.0.31",
		"@types/mocha": "^5.2.3",
		"@types/mongoose": "^5.0.18",
		"@types/morgan": "^1.7.35",
		"@types/node": "^10.3.4",
		"@types/passport": "^0.4.5",
		"@types/passport-jwt": "^3.0.1",
		"@types/passport-local": "^1.0.33",
		"@types/sanitize-html": "^1.14.0",
		"@types/validator": "^9.4.1",
		"chai": "^4.1.2",
		"chai-http": "^4.0.0",
		"concurrently": "^3.6.0",
		"cross-env": "^5.2.0",
		"mocha": "^5.2.0",
		"nodemon": "^1.17.5",
		"ts-loader": "^4.4.1",
		"tslint": "^5.10.0",
		"typescript": "^2.9.2",
		"webpack": "4.12.0",
		"webpack-cli": "3.0.8"
	}
}
