{
	"name": "sotingserver",
	"version": "1.0.0",
	"description": "Server backend for Sotingane",
	"main": "dist/api.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsc-watch --onSuccess \"node dist/out-tsc/api/src/app.js\"",
		"lint": "tslint -c tslint.json 'src/**/*.ts'",
		"test:cont": "tsc-watch --onSuccess \"cross-env NODE_ENV=test node dist/out-tsc/api/test/testbed.js\"",
		"test": "npm run build && cross-env NODE_ENV=test node dist/out-tsc/api/test/testbed.js",
		"test:debug": "npm run build && mocha --inspect-brk --delay --exit ./dist/out-tsc/api/**/*.test.js",
		"webpack": "webpack --config webpack.config.js --progress --colors"
	},
	"author": "",
	"dependencies": {
		"ajv": "6.5.4",
		"bcrypt": "^3.0.0",
		"config": "^2.0.1",
		"cookie-parser": "^1.4.3",
		"express": "^4.16.4",
		"helmet": "3.14.0",
		"jsonwebtoken": "^8.3.0",
		"method-override": "^3.0.0",
		"mongoose": "5.3.6",
		"morgan": "1.9.1",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"sanitize-html": "1.19.1",
		"source-map-support": "0.5.9",
		"ua-parser-js": "^0.7.18",
		"validator": "10.8.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/chai": "4.1.6",
		"@types/chai-http": "3.0.5",
		"@types/config": "0.0.34",
		"@types/cookie-parser": "^1.4.1",
		"@types/express": "^4.16.0",
		"@types/helmet": "0.0.42",
		"@types/jsonwebtoken": "^7.2.8",
		"@types/method-override": "0.0.31",
		"@types/mocha": "^5.2.5",
		"@types/mongoose": "5.2.19",
		"@types/morgan": "^1.7.35",
		"@types/node": "10.12.0",
		"@types/passport": "^0.4.6",
		"@types/passport-jwt": "^3.0.1",
		"@types/passport-local": "1.0.33",
		"@types/sanitize-html": "1.18.2",
		"@types/ua-parser-js": "^0.7.32",
		"@types/validator": "9.4.2",
		"chai": "^4.2.0",
		"chai-http": "4.2.0",
		"cross-env": "^5.2.0",
		"mocha": "^5.2.0",
		"tsc-watch": "1.0.30",
		"tslint": "^5.11.0",
		"ts-loader": "5.2.2",
		"typescript": "3.1.3",
		"webpack": "4.23.0",
		"webpack-cli": "3.1.2"
	}
}
