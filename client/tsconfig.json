{
	"compileOnSave": false,
	"compilerOptions": {
    	"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2015",
		"module": "esnext",
		"typeRoots": [
			"node_modules/@types"
		],
		"baseUrl": "src",
		"paths": {
			"@app/*": [ "app/*" ],
			"@env": [ "environments/environment" ],
			"@app/ckeditor": [ "../../CKEditor" ],
			"@types": [ "../../Shared/types" ],
			"@global": [ "../../Shared/global.settings" ],
			"tslib": [ "../node_modules/tslib"]
		},
		"lib": [
			"es2018",
			"dom"
		]
	},
	"exclude": [ "node_modules" ]
}
