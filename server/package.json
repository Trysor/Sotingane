	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "concurrently \"tsc --watch\" \"nodemon node_modules/nodemon/bin/nodemon.js --watch dist dist/index.js\"",
		"lint": "tslint node_modules/tslint/bin/linter.js -c tslint.json 'src/**/*.ts'",
