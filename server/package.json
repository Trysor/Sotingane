		"zone.js": "^0.8.20"
	},
	"devDependencies": {
		"@types/config": "0.0.34",
		"@types/express": "^4.11.1",
		"@types/helmet": "0.0.37",
		"@types/morgan": "^1.7.35",
		"@types/node": "^9.4.7",
		"concurrently": "^3.5.1",
		"cross-env": "^5.1.4",
		"nodemon": "^1.17.2",
		"tslint": "^5.9.1",
		"typescript": "^2.7.2"
